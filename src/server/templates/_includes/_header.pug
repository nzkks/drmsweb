mixin top-menu(main_sel)
  nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#main-top-menu', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#')= title
      #main-top-menu.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li.item(class=main_sel === 'home' ? 'active' : '')
            a(href='/') Home
          li.item(class=main_sel === 'about' ? 'active' : '')
            a(href='/about') About
          li.item(class=main_sel === 'portfolio' ? 'active' : '')
            a(href='/portfolio') Portfolio
          li.item(class=main_sel === 'contact' ? 'active' : '')
            a(href='/contact') Contact
